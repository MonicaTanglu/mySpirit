/* pages/storyDetail/storyDetail.wxss *//* pages/detail/detail.wxss */
.detail {
  padding: 10px 16px;
}

.h2 {
  font-size: 28px;
  font-weight: bold;
  text-align: center;
}
.h4 {
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  color: #333;
  padding: 10px 0;
}

.time {
  font-size: 12px;
  color: #B5B5B5;
  text-align: center;
}

.flex-name {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
}

.flex-name .icon {
  font-size: 20px;
  font-weight: bold;
}
.flex-user {
  display: flex;
  align-items: center;
}
.flex-name .name {
  font-size: 12px;
  padding-left: 10px;
  color: #b5b5b5;
}

.cell-block {
  height: 34px;
  line-height: 34px;
  text-align: center;
  cursor: pointer;
}

.cell-block:first-child {
  border-bottom: 1px solid #EBEDF0;
  height: 36px;
}

.cell-block:last-child {
  color: red;
}

.cell-block:active {
  background-color: #f2f3f5;
}

.comment-item {
  display: flex;
  justify-content: space-between;
  border: 1px solid #EEEEEE;
  border-radius: 20px;
  padding: 20rpx;
  margin-top: 10px;
  background-color: #fff;
  position: relative;
}

.comment-item .flex {
  display: flex;
  /* justify-content: space-between; */
  font-size: 12px;
  color: #8D8D8D;
  margin: 10rpx 10rpx 0 0;
}

.comment-item .delete {
  color: red;
  margin-left: 10px;
  /* position: absolute; */
  /* bottom: 10rpx; */
  font-size: 12px;
  /* left: 20rpx; */
}

.comment-item .comment-content {
  font-size: 14px;
  color: #8D8D8D;
  width: 100%;
}

.comment-item .avatar {
  display: block;
}

.comment-item .comment-user .name {
  text-align: center;
  color: #8D8D8D;
  display: block;
  font-size: 12px;
}